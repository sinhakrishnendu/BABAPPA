{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "BABAPPA Energy Model Artifact",
  "type": "object",
  "required": [
    "schema_version",
    "energy_family",
    "feature_names",
    "mean",
    "covariance",
    "precision",
    "training_samples"
  ],
  "properties": {
    "schema_version": { "type": "integer", "minimum": 1 },
    "energy_family": { "type": "string", "const": "QuadraticEnergy" },
    "feature_names": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string" }
    },
    "mean": { "type": "array", "items": { "type": "number" } },
    "covariance": {
      "type": "array",
      "items": { "type": "array", "items": { "type": "number" } }
    },
    "precision": {
      "type": "array",
      "items": { "type": "array", "items": { "type": "number" } }
    },
    "training_samples": { "type": "integer", "minimum": 1 },
    "optimizer": { "type": "string" },
    "ridge": { "type": "number", "exclusiveMinimum": 0 }
  },
  "additionalProperties": true
}
