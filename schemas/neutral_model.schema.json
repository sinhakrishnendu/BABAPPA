{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "BABAPPA Neutral Model Spec",
  "type": "object",
  "required": [
    "schema_version",
    "model_family",
    "genetic_code_table",
    "kappa",
    "omega"
  ],
  "properties": {
    "schema_version": { "type": "integer", "const": 1 },
    "model_family": { "type": "string", "const": "GY94" },
    "genetic_code_table": { "type": "string", "minLength": 1 },
    "tree_newick": { "type": "string", "minLength": 3 },
    "tree_file": { "type": "string", "minLength": 1 },
    "kappa": { "type": "number", "exclusiveMinimum": 0 },
    "omega": { "type": "number", "const": 1.0 },
    "codon_frequencies": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": { "type": "number", "minimum": 0 }
    },
    "codon_frequencies_method": { "type": "string", "minLength": 1 },
    "frozen_values": { "type": "boolean" }
  },
  "additionalProperties": true
}
